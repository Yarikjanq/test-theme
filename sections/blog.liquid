<h1>{{ blog.title }}</h1>
<div class="blog_content">
  {% for article in blog.articles %}
    <div>
      <a href="{{ article.url }}">
        <h2>{{ article.title }}</h2>
        <p>Автор: {{ article.author }}</p>
      </a>
    </div>
  {% endfor %}
</div>

<style>
  .blog_content {
    display: flex;
    justify-content: space-around;
  }
</style>
{% schema %}
{
  "name": "Blog",
  "settings": [
    {
      "type": "color",
      "id": "bg",
      "label": "Background color"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color"
    },
    {
      "type": "text",
      "id": "custom_shop_name",
      "label": "Custom shop name",
      "default": "My Shopify Store"
    },
    {
      "type": "image_picker",
      "id": "cart_logo",
      "label": "Cart logo"
    },

    {
      "type": "select",
      "id": "header_alignment",
      "label": "Header alignment",
      "default": "center",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "blog"
    }
  ]
}
{% endschema %}
