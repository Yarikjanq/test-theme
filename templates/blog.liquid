<h1>{{ blog.title }}</h1>
<div class="blog_content">
  {% for article in blog.articles %}
    <div>
      <a href="{{ article.url }}">
        <h2>{{ article.title }}</h2>
        <p>Автор: {{ article.author }}</p>
      </a>
    </div>
  {% endfor %}
</div>

<style>
  .blog_content {
    display: flex;
    justify-content: space-around;
  }
</style>
