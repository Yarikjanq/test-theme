<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <link rel="icon" href="{{ 'hanger-shirt.png' | asset_url }}" type="image/png">
    <script src="{{ 'global.js' |  asset_url }}" defer="defer"></script>
    <script src="{{ 'drawer.js' | asset_url }}" defer="defer"></script>
    <script src="{{ 'links-pop-up.js' |  asset_url }}" defer="defer"></script>
    <script src="{{ 'details-modal.js' |  asset_url }}" defer="defer"></script>
    <script src="{{ 'search-form.js' |  asset_url }}" defer="defer"></script>
    <script src="{{ 'predictive-search.js' |  asset_url }}" defer="defer"></script>

    {{ 'theme.css' | asset_url | stylesheet_tag }}
    {{ 'background.css' | asset_url | stylesheet_tag }}
    {{ content_for_header }}
  </head>
  <body>
    {% section 'header' %}
    {{ content_for_layout }}

    {% section 'footer' %}

    <script>
      window.shopUrl = '{{ request.origin }}';
      window.routes = {
        cart_add_url: '{{ routes.cart_add_url }}',
        cart_change_url: '{{ routes.cart_change_url }}',
        cart_update_url: '{{ routes.cart_update_url }}',
        cart_url: '{{ routes.cart_url }}',
        predictive_search_url: '{{ routes.predictive_search_url }}',
      };
    </script>
  </body>
</html>
